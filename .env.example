# ===========================================
# PROMETHEUS ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local and fill in the values
# DO NOT commit .env.local to git!

# ===========================================
# SUPABASE (REQUIRED)
# Get from: Supabase Dashboard → Settings → API
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...your-anon-key
SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key

# ===========================================
# DATABASE (REQUIRED)
# Get from: Supabase Dashboard → Settings → Database → Connection string
# Use "Transaction" pooler (port 6543) for DATABASE_URL
# Use "Session" pooler (port 5432) for DIRECT_URL
# ===========================================
DATABASE_URL=postgresql://postgres.[ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true
DIRECT_URL=postgresql://postgres.[ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# ===========================================
# APP CONFIG
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DOMAIN=prometheus.app

# ===========================================
# INTERNAL API SECRET (REQUIRED)
# Generate with: openssl rand -base64 32
# ===========================================
INTERNAL_API_SECRET=your-random-secret-here

# ===========================================
# ENCRYPTION KEY (REQUIRED for OAuth tokens)
# Generate with: openssl rand -base64 32
# ===========================================
ENCRYPTION_KEY=your-encryption-key-here

# ===========================================
# EMAIL - MAILGUN (REQUIRED for password reset & invitations)
# Get from: https://app.mailgun.com/app/sending/domains
# ===========================================
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.yourdomain.com
EMAIL_FROM=noreply@prometheus.app

# ===========================================
# INTEGRATIONS (Optional - add as needed)
# ===========================================

